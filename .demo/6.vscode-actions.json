{
  "$schema": "https://demotime.show/demo-time.schema.json",
  "title": "VSCode actions",
  "description": "",
  "version": 2,
  "demos": [
    {
      "title": "Execute VSCode command (zoom in)",
      "description": "",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.zoomIn"
        }
      ]
    },
    {
      "title": "Execute VSCode command (zoom out)",
      "description": "",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "workbench.action.zoomOut"
        }
      ]
    },
    {
      "title": "Execute VSCode command (using path)",
      "description": "",
      "steps": [
        {
          "action": "executeVSCodeCommand",
          "command": "markdown.showPreview",
          "path": "README.md"
        }
      ]
    },
    {
      "title": "Show information message",
      "description": "",
      "steps": [
        {
          "action": "showInfoMessage",
          "message": "Hello from Demo Time!"
        }
      ]
    },
    {
      "title": "Set state",
      "description": "",
      "steps": [
        {
          "action": "setState",
          "state": {
            "key": "message",
            "value": "Hello from Demo Time!"
          }
        },
        {
            "action": "create",
            "path": "temp/output.log",
            "content": "{STATE_message}"
        },
        {
            "action": "open",
            "path": "temp/output.log"
        }
      ]
    },
    {
      "title": "Open website",
      "description": "",
      "steps": [
        {
          "action": "openWebsite",
          "url": "https://demotime.show"
        }
      ]
    },
    {
      "title": "Open website (in VSCode)",
      "description": "",
      "steps": [
        {
          "action": "openWebsite",
          "url": "https://demotime.show",
          "openInVSCode": true
        }
      ]
    },
    {
      "title": "Copy content to clipboard",
      "description": "",
      "steps": [
        {
          "action": "copyToClipboard",
          "content": "Hello from Demo Time!"
        }
      ]
    },
    {
      "title": "Copy file content to clipboard",
      "description": "",
      "steps": [
        {
          "action": "copyToClipboard",
          "contentPath": ".demo/vscode/copy-test.txt"
        }
      ]
    },
    {
      "title": "Copy file content to clipboard (with variables)",
      "description": "",
      "steps": [
        {
          "action": "setState",
          "state": {
            "key": "TEST_STATE",
            "value": "DEMO TIME"
          }
        },
        {
          "action": "copyToClipboard",
          "content": "Clipboard with state value: {STATE_TEST_STATE}"
        }
      ]
    }
  ]
}