{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://demotime.elio.dev/demo-time.schema.json",
  "title": "Demo Time - Schema",
  "description": "The schema for the Demo Time - VSCode extension",
  "lastModified": "2025-01-11",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "demos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "icons": {
            "type": "object",
            "properties": {
              "start": {
                "type": "string"
              },
              "end": {
                "type": "string"
              }
            },
            "required": ["start", "end"],
            "description": "Provide the icon name of the VS Code codicon for the start and end of the demo"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "action": {
                  "type": "string",
                  "enum": [
                    "applyPatch",
                    "create",
                    "open",
                    "rename",
                    "deleteFile",
                    "close",
                    "closeAll",
                    "copy",
                    "move",
                    "markdownPreview",
                    "insert",
                    "highlight",
                    "replace",
                    "unselect",
                    "delete",
                    "positionCursor",
                    "write",
                    "save",
                    "format",
                    "setSetting",
                    "setTheme",
                    "unsetTheme",
                    "waitForTimeout",
                    "waitForInput",
                    "executeVSCodeCommand",
                    "showInfoMessage",
                    "setState",
                    "executeTerminalCommand",
                    "executeScript",
                    "closeTerminal",
                    "snippet"
                  ],
                  "title": "Action to perform"
                },
                "path": {
                  "type": "string",
                  "title": "Path to file"
                },
                "content": {
                  "type": "string",
                  "title": "Content to insert"
                },
                "contentPath": {
                  "type": "string",
                  "title": "Path to the content to use"
                },
                "patch": {
                  "type": "string",
                  "title": "Path to the patch file to use for the snapshot provided in the contentPath"
                },
                "position": {
                  "type": ["string", "number"],
                  "title": "Position in the file. Can be line number or \"<start line>,<start character>\" or \"<start line>:<end line>\" or \"<start line>,<start character>:<end line>,<end character>\"."
                },
                "startPlaceholder": {
                  "type": "string",
                  "title": "Start placeholder value for the start position"
                },
                "endPlaceholder": {
                  "type": "string",
                  "title": "End placeholder value for the end position"
                },
                "highlightWholeLine": {
                  "type": "boolean",
                  "default": true,
                  "title": "Highlight the whole line"
                },
                "timeout": {
                  "type": "number",
                  "title": "Timeout in milliseconds"
                },
                "command": {
                  "type": "string",
                  "title": "VSCode or Terminal command to execute, or the name of the script type to execute. Example: node, powershell, bash, python, etc."
                },
                "message": {
                  "type": "string",
                  "title": "The message for the notification"
                },
                "dest": {
                  "type": "string",
                  "title": "The destination path for the file"
                },
                "zoom": {
                  "type": "number",
                  "title": "The zoom level for the editor when highlighting code"
                },
                "lineInsertionDelay": {
                  "type": "number",
                  "title": "Speed in milliseconds to insert each line. If not defined, the \"demoTime.lineInsertionDelay\" setting will be used. To turn off the line insertion effect, set it to 0."
                },
                "overwrite": {
                  "type": "boolean",
                  "title": "Overwrite the destination file if it exists. Default is false."
                },
                "terminalId": {
                  "type": "string",
                  "title": "Define the name for the terminal. Default is \"DemoTime\"."
                },
                "id": {
                  "type": "string",
                  "title": "The ID of the step"
                },
                "args": {
                  "type": ["object", "array", "string", "number", "boolean"],
                  "title": "Arguments to pass to the command for VSCode or placeholder names for your snippet"
                },
                "theme": {
                  "type": "string",
                  "oneOf": [
                    {
                      "enum": [
                        "Default Dark Modern",
                        "Default Dark+",
                        "Default High Contrast Light",
                        "Default High Contrast",
                        "Default Light Modern",
                        "Default Light+"
                      ]
                    },
                    {
                      "type": "string"
                    }
                  ],
                  "title": "Arguments to pass to the command for VSCode or placeholder names for your snippet"
                },
                "setting": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string",
                      "description": "The setting key"
                    },
                    "value": {
                      "type": [
                        "string",
                        "number",
                        "boolean",
                        "object",
                        "array",
                        "null"
                      ],
                      "description": "The setting value"
                    }
                  },
                  "required": ["key", "value"]
                },
                "state": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string",
                      "description": "The state key"
                    },
                    "value": {
                      "type": ["string"],
                      "description": "The state value"
                    }
                  },
                  "required": ["key", "value"]
                }
              },
              "required": ["action"],
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": [
                          "create",
                          "open",
                          "deleteFile",
                          "markdownPreview"
                        ]
                      }
                    }
                  },
                  "then": {
                    "required": ["path"]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": [
                          "executeVSCodeCommand",
                          "executeTerminalCommand"
                        ]
                      }
                    }
                  },
                  "then": {
                    "required": ["command"]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "applyPatch"
                      }
                    }
                  },
                  "then": {
                    "required": ["path", "contentPath", "patch"]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": ["insert", "replace"]
                      }
                    }
                  },
                  "then": {
                    "required": ["path"],
                    "oneOf": [
                      {
                        "required": ["content"]
                      },
                      {
                        "required": ["contentPath"]
                      }
                    ]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "snippet"
                      }
                    }
                  },
                  "then": {
                    "required": ["contentPath"]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "executeScript"
                      }
                    }
                  },
                  "then": {
                    "required": ["id", "command", "path"]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": ["rename", "copy", "move"]
                      }
                    }
                  },
                  "then": {
                    "required": ["path", "dest"]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "setSetting"
                      }
                    }
                  },
                  "then": {
                    "required": ["setting"]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": ["highlight", "positionCursor"]
                      }
                    }
                  },
                  "then": {
                    "required": ["path"]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "unselect"
                      }
                    }
                  },
                  "then": {
                    "required": ["path"]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "delete"
                      }
                    }
                  },
                  "then": {
                    "required": ["path"]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "showInfoMessage"
                      }
                    }
                  },
                  "then": {
                    "required": ["message"]
                  }
                }
              ],
              "additionalProperties": false
            }
          },
          "notes": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "Path to the file to open"
              },
              "showOnTrigger": {
                "type": "boolean",
                "description": "Show the notes when the trigger is activated. Default is false."
              }
            },
            "required": ["path"]
          }
        },
        "required": ["title", "steps"],
        "additionalProperties": false
      }
    }
  },
  "required": ["title", "description", "demos"]
}
