{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://demotime.show/demo-time.schema.json",
  "title": "Demo Time - Schema",
  "description": "The schema for the Demo Time - VSCode extension",
  "lastModified": "2025-05-30",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "number",
      "enum": [1, 2],
      "default": 1
    },
    "timer": {
      "type": "number",
      "description": "The timer in minutes for the demo."
    },
    "demos": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "icons": {
            "type": "object",
            "properties": {
              "start": {
                "type": "string"
              },
              "end": {
                "type": "string"
              }
            },
            "required": ["start", "end"],
            "description": "Provide the icon name of the VS Code codicon for the start and end of the demo"
          },
          "steps": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "action": {
                  "type": "string",
                  "enum": [
                    "applyPatch",
                    "create",
                    "open",
                    "rename",
                    "deleteFile",
                    "close",
                    "closeAll",
                    "copy",
                    "move",
                    "markdownPreview",
                    "imagePreview",
                    "openSlide",
                    "insert",
                    "highlight",
                    "replace",
                    "unselect",
                    "delete",
                    "positionCursor",
                    "write",
                    "save",
                    "format",
                    "setSetting",
                    "setTheme",
                    "unsetTheme",
                    "setPresentationView",
                    "unsetPresentationView",
                    "waitForTimeout",
                    "waitForInput",
                    "executeVSCodeCommand",
                    "showInfoMessage",
                    "setState",
                    "openWebsite",
                    "openTerminal",
                    "executeTerminalCommand",
                    "executeScript",
                    "closeTerminal",
                    "snippet",
                    "openPowerPoint",
                    "openKeynote",
                    "openCopilotChat",
                    "newCopilotChat",
                    "askCopilotChat",
                    "editCopilotChat",
                    "agentCopilotChat",
                    "copilotClose",
                    "copyToClipboard",
                    "pasteFromClipboard",
                    "typeText",
                    "pressEnter"
                  ],
                  "title": "Action to perform"
                },
                "path": {
                  "type": "string",
                  "title": "Path to file"
                },
                "content": {
                  "type": "string",
                  "title": "Content to insert"
                },
                "contentPath": {
                  "type": "string",
                  "title": "Path to the content to use"
                },
                "patch": {
                  "type": "string",
                  "title": "Path to the patch file to use for the snapshot provided in the contentPath"
                },
                "position": {
                  "type": ["string", "number"],
                  "title": "Position in the file. Can be line number or \"<start line>,<start character>\" or \"<start line>:<end line>\" or \"<start line>,<start character>:<end line>,<end character>\"."
                },
                "startPlaceholder": {
                  "type": "string",
                  "title": "Start placeholder value for the start position"
                },
                "endPlaceholder": {
                  "type": "string",
                  "title": "End placeholder value for the end position"
                },
                "highlightWholeLine": {
                  "type": "boolean",
                  "default": true,
                  "title": "Highlight the whole line"
                },
                "timeout": {
                  "type": "number",
                  "title": "Timeout in milliseconds"
                },
                "command": {
                  "type": "string",
                  "title": "VSCode or Terminal command to execute, or the name of the script type to execute. Example: node, powershell, bash, python, etc."
                },
                "message": {
                  "type": "string",
                  "title": "The message for the notification"
                },
                "dest": {
                  "type": "string",
                  "title": "The destination path for the file"
                },
                "zoom": {
                  "type": "number",
                  "title": "The zoom level for the editor when highlighting code"
                },
                "overwrite": {
                  "type": "boolean",
                  "title": "Overwrite the destination file if it exists. Default is false."
                },
                "terminalId": {
                  "type": "string",
                  "title": "Define the name for the terminal. Default is \"DemoTime\"."
                },
                "id": {
                  "type": "string",
                  "title": "The ID of the step"
                },
                "url": {
                  "type": "string",
                  "title": "The URL to open"
                },
                "openInVSCode": {
                  "type": "boolean",
                  "title": "Open the URL in VSCode. Default is false.",
                  "default": false
                },
                "args": {
                  "type": ["object", "array", "string", "number", "boolean"],
                  "title": "Arguments to pass to the command for VSCode or placeholder names for your snippet"
                },
                "theme": {
                  "type": "string",
                  "oneOf": [
                    {
                      "enum": [
                        "Default Dark Modern",
                        "Default Dark+",
                        "Default High Contrast Light",
                        "Default High Contrast",
                        "Default Light Modern",
                        "Default Light+"
                      ]
                    },
                    {
                      "type": "string"
                    }
                  ],
                  "title": "Provide the Visual Studio Code theme name, or for the `imagePreview` action, you could provide the relative path to the CSS file to use for your custom theme."
                },
                "setting": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string",
                      "description": "The setting key"
                    },
                    "value": {
                      "type": [
                        "string",
                        "number",
                        "boolean",
                        "object",
                        "array",
                        "null"
                      ],
                      "description": "The setting value"
                    }
                  },
                  "required": ["key", "value"]
                },
                "state": {
                  "type": "object",
                  "properties": {
                    "key": {
                      "type": "string",
                      "description": "The state key"
                    },
                    "value": {
                      "type": ["string"],
                      "description": "The state value"
                    }
                  },
                  "required": ["key", "value"]
                },
                "insertTypingSpeed": {
                  "type": "number",
                  "title": "Speed in milliseconds between each character when typing text. Used with the typeText action."
                },
                "insertTypingMode": {
                  "type": "string",
                  "enum": ["instant", "line-by-line", "character-by-character"],
                  "default": "instant",
                  "title": "Typing mode defines how you enter the text. Default is 'instant'."
                }
              },
              "required": ["action"],
              "allOf": [
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": [
                          "open",
                          "deleteFile",
                          "markdownPreview",
                          "openSlide"
                        ]
                      }
                    }
                  },
                  "then": {
                    "required": ["path"],
                    "properties": {
                      "path": { "type": "string", "title": "Path to file" }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": ["create"]
                      }
                    }
                  },
                  "then": {
                    "required": ["path"],
                    "properties": {
                      "content": {
                        "type": "string",
                        "title": "Content to write to the file"
                      },
                      "contentPath": {
                        "type": "string",
                        "title": "Path to the content file to use"
                      },
                      "overwrite": {
                        "type": "boolean",
                        "title": "Overwrite the destination file if it exists. Default is false."
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": ["imagePreview"]
                      }
                    }
                  },
                  "then": {
                    "required": ["path"],
                    "properties": {
                      "theme": {
                        "type": "string",
                        "title": "Relative path to a CSS file for custom styling of the image preview"
                      },
                      "zoom": {
                        "type": "number",
                        "title": "The zoom level for the image preview"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": ["open", "openSlide", "markdownPreview"]
                      }
                    }
                  },
                  "then": {
                    "properties": {
                      "openInVSCode": {
                        "type": "boolean",
                        "title": "Open the file in VSCode. Default is false.",
                        "default": false
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": [
                          "executeVSCodeCommand",
                          "executeTerminalCommand"
                        ]
                      }
                    }
                  },
                  "then": {
                    "required": ["command"],
                    "properties": {
                      "args": {
                        "type": [
                          "object",
                          "array",
                          "string",
                          "number",
                          "boolean"
                        ],
                        "title": "Arguments to pass to the command for VSCode or placeholder names for your snippet"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "applyPatch"
                      }
                    }
                  },
                  "then": {
                    "required": ["path", "contentPath", "patch"],
                    "properties": {
                      "overwrite": {
                        "type": "boolean",
                        "title": "Overwrite the destination file if it exists. Default is false."
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "openWebsite"
                      }
                    }
                  },
                  "then": {
                    "required": ["url"],
                    "properties": {
                      "openInVSCode": {
                        "type": "boolean",
                        "title": "Open the URL in VSCode. Default is false.",
                        "default": false
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "copyToClipboard"
                      }
                    }
                  },
                  "then": {
                    "oneOf": [
                      { "required": ["content"] },
                      { "required": ["contentPath"] }
                    ],
                    "properties": {
                      "message": {
                        "type": "string",
                        "title": "Optional message to show after copying to clipboard"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": ["insert", "replace"]
                      }
                    }
                  },
                  "then": {
                    "required": ["path"],
                    "oneOf": [
                      {
                        "required": ["content"]
                      },
                      {
                        "required": ["contentPath"]
                      }
                    ],
                    "properties": {
                      "overwrite": {
                        "type": "boolean",
                        "title": "Overwrite the destination file if it exists. Default is false."
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "snippet"
                      }
                    }
                  },
                  "then": {
                    "required": ["contentPath"],
                    "properties": {
                      "args": {
                        "type": [
                          "object",
                          "array",
                          "string",
                          "number",
                          "boolean"
                        ],
                        "title": "Arguments to pass to the snippet"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "executeScript"
                      }
                    }
                  },
                  "then": {
                    "required": ["id", "command", "path"],
                    "properties": {
                      "args": {
                        "type": [
                          "object",
                          "array",
                          "string",
                          "number",
                          "boolean"
                        ],
                        "title": "Arguments to pass to the script"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": ["rename", "copy", "move"]
                      }
                    }
                  },
                  "then": {
                    "required": ["path", "dest"],
                    "properties": {
                      "overwrite": {
                        "type": "boolean",
                        "title": "Overwrite the destination file if it exists. Default is false."
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "setSetting"
                      }
                    }
                  },
                  "then": {
                    "required": ["setting"],
                    "properties": {
                      "scope": {
                        "type": "string",
                        "title": "Scope for the setting (user, workspace, folder)"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "enum": ["highlight", "positionCursor"]
                      }
                    }
                  },
                  "then": {
                    "required": ["path"],
                    "properties": {
                      "zoom": {
                        "type": "number",
                        "title": "The zoom level for the editor when highlighting code"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "unselect"
                      }
                    }
                  },
                  "then": {
                    "required": ["path"],
                    "properties": {
                      "clearHighlight": {
                        "type": "boolean",
                        "title": "Clear highlight when unselecting"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "delete"
                      }
                    }
                  },
                  "then": {
                    "required": ["path"],
                    "properties": {
                      "permanent": {
                        "type": "boolean",
                        "title": "Permanently delete the file"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": { "const": "askCopilotChat" }
                    }
                  },
                  "then": {
                    "properties": {
                      "message": {
                        "type": "string",
                        "title": "The message for the Copilot Chat interaction",
                        "description": "Optional message to pass to the Copilot Chat when asking a question"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": { "const": "editCopilotChat" }
                    }
                  },
                  "then": {
                    "properties": {
                      "message": {
                        "type": "string",
                        "title": "The message for editing the Copilot Chat",
                        "description": "Optional message to modify in the Copilot Chat session"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": { "const": "agentCopilotChat" }
                    }
                  },
                  "then": {
                    "properties": {
                      "message": {
                        "type": "string",
                        "title": "The message for the Copilot Chat agent",
                        "description": "Optional agent instruction to pass to the Copilot Chat"
                      }
                    }
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "showInfoMessage"
                      }
                    }
                  },
                  "then": {
                    "required": ["message"]
                  }
                },
                {
                  "if": {
                    "properties": {
                      "action": {
                        "const": "typeText"
                      }
                    }
                  },
                  "then": {
                    "required": ["content"]
                  }
                }
              ],
              "additionalProperties": false
            }
          },
          "notes": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "Path to the file to open"
              },
              "showOnTrigger": {
                "type": "boolean",
                "description": "Show the notes when the trigger is activated. Default is false."
              }
            },
            "required": ["path"]
          }
        },
        "required": ["title", "steps"],
        "additionalProperties": false
      }
    }
  },
  "required": ["title", "description", "demos"]
}
